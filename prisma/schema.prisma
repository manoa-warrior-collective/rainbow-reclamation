generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  // for local development
  // url      = env("DATABASE_URL")
  // for Vercel
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

enum Role {
  USER
  ADMIN
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
  role     Role   @default(USER)
}

enum Condition {
  excellent
  good
  fair
  poor
}

enum Status {
  LOST
  FOUND
  CLAIMED
}

enum Category {
  OTHER
  ELECTRONICS
  CLOTHING
  ACCESSORIES
  DAILY_NECESSITIES
}

enum Building {
  BIL
  KELL
  POST
  CAMPUS_CENTER
  OTHER
}

model Item {
  id            Int       @id @default(autoincrement())
  name          String
  description   String
  category      Category  @default(OTHER)
  status        Status
  building      Building
  location      String    // Additional location details
  date          DateTime  // When it was lost/found
  imageUrl      String?   // Optional image
  contactInfo   String    // Email or phone
  reportedBy    String    // User email or name
  bountyStatus  Boolean   @default(false)
  bountyReward  Float?    // Optional reward amount
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Stuff {
  id        Int       @id @default(autoincrement())
  name      String
  quantity  Int
  condition Condition @default(good)
  owner     String
}